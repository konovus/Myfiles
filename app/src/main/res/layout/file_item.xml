<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/backgroundColor"
    android:paddingTop="10dp"
    android:paddingStart="10dp">


    <ImageView
        android:id="@+id/file_logo"
        android:layout_width="50dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_large_files"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some name"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/file_logo"/>

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.25 KB"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/name"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aug 21, 2021"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/size"/>
<!--    <TextView-->
<!--        android:id="@+id/uri"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Aug 21, 2021"-->
<!--        android:textSize="14sp"-->
<!--        android:textColor="@color/light_gray"-->
<!--        android:layout_marginStart="20dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/size"-->
<!--        app:layout_constraintStart_toStartOf="@id/name"/>-->

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:button="@drawable/checkbox_icon_selector"
        android:buttonTint="@drawable/checkbox_color_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/date"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>