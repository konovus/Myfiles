<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/folder_nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storage"
        android:textColor="?attr/colorOnPrimary"
        android:padding="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:paddingTop="5dp"
        app:tint="@color/arrow_gray"
        app:layout_constraintTop_toTopOf="@id/folder_nav_name"
        app:layout_constraintBottom_toBottomOf="@id/folder_nav_name"
        app:layout_constraintStart_toEndOf="@id/folder_nav_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>