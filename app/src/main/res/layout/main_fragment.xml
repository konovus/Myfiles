<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainScreen.MainFragment"
    android:padding="15dp"
    android:background="?attr/backgroundColor">

    <TextView
        android:id="@+id/available_storage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available 12.55 GB / 64.00 GB"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details >"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


        <View
            android:id="@+id/bg_documents"
            android:tag="documents"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:layout_weight="0.33"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bg_downloads"
            app:layout_constraintTop_toBottomOf="@id/available_storage_tv"
            android:background="@drawable/category_bg_shape"/>

            <ImageView
                android:id="@+id/documents_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:src="@drawable/ic_coduments"
                app:layout_constraintTop_toTopOf="@id/bg_documents"
                app:layout_constraintStart_toStartOf="@id/bg_documents"
                app:tint="@color/orange"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/documents_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Documents"
                android:fontFamily="@font/opensans_regular"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/documents_icon"
                app:layout_constraintStart_toStartOf="@id/bg_documents"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/documents_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="@id/documents_title"
                app:layout_constraintTop_toBottomOf="@id/documents_title"
                android:text="0 items"
                android:textSize="14sp"
                android:textColor="@color/light_gray"/>
        <View
            android:id="@+id/bg_downloads"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:layout_weight="0.33"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="1dp"
            android:tag="downloads"
            app:layout_constraintStart_toEndOf="@id/bg_documents"
            app:layout_constraintEnd_toStartOf="@id/bg_recent"
            app:layout_constraintTop_toTopOf="@id/bg_documents"
            android:background="@drawable/category_bg_shape"/>

            <ImageView
                android:id="@+id/downloads_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:src="@drawable/ic_baseline_download_24"
                app:layout_constraintTop_toTopOf="@id/bg_downloads"
                app:layout_constraintStart_toStartOf="@id/bg_downloads"
                app:tint="@color/teal_700"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/downloads_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Downloads"
                android:fontFamily="@font/opensans_regular"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/downloads_icon"
                app:layout_constraintStart_toStartOf="@id/bg_downloads"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/downloads_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="@id/downloads_title"
                app:layout_constraintTop_toBottomOf="@id/downloads_title"
                android:text="0 items"
                android:textSize="14sp"
                android:textColor="@color/light_gray"/>
        <View
            android:id="@+id/bg_recent"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:layout_weight="0.33"
            android:tag="recent"
            app:layout_constraintStart_toEndOf="@id/bg_downloads"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg_documents"
            android:background="@drawable/category_bg_shape"/>

            <ImageView
                android:id="@+id/recent_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:src="@drawable/ic_recent_time"
                app:layout_constraintTop_toTopOf="@id/bg_recent"
                app:layout_constraintStart_toStartOf="@id/bg_recent"
                app:tint="@color/yellow"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/recent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Recent"
                android:fontFamily="@font/opensans_regular"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/recent_icon"
                app:layout_constraintStart_toStartOf="@id/bg_recent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/recent_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="@id/recent_title"
                app:layout_constraintTop_toBottomOf="@id/recent_title"
                android:text="0 items"
                android:textSize="14sp"
                android:textColor="@color/light_gray"/>

        <View
            android:id="@+id/bg_images"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:layout_weight="0.33"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:tag="images"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bg_videos"
            app:layout_constraintTop_toBottomOf="@id/bg_documents"
            android:background="@drawable/category_bg_shape"/>

            <ImageView
                android:id="@+id/images_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:src="@drawable/ic_baseline_image_24"
                app:layout_constraintTop_toTopOf="@id/bg_images"
                app:layout_constraintStart_toStartOf="@id/bg_images"
                app:tint="@color/teal_200"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/images_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Images"
                android:fontFamily="@font/opensans_regular"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/images_icon"
                app:layout_constraintStart_toStartOf="@id/bg_images"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/images_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="@id/images_title"
                app:layout_constraintTop_toBottomOf="@id/images_title"
                android:text="0 items"
                android:textSize="14sp"
                android:textColor="@color/light_gray"/>
        <View
            android:id="@+id/bg_videos"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:layout_weight="0.33"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:tag="videos"
            app:layout_constraintStart_toEndOf="@id/bg_images"
            app:layout_constraintEnd_toStartOf="@id/bg_audios"
            app:layout_constraintTop_toBottomOf="@id/bg_downloads"
            android:background="@drawable/category_bg_shape"/>

            <ImageView
                android:id="@+id/videos_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:src="@drawable/ic_outline_videocam_24"
                app:layout_constraintTop_toTopOf="@id/bg_videos"
                app:layout_constraintStart_toStartOf="@id/bg_videos"
                app:tint="@color/purple_500"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/videos_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Videos"
                android:fontFamily="@font/opensans_regular"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/videos_icon"
                app:layout_constraintStart_toStartOf="@id/bg_videos"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/videos_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="@id/videos_title"
                app:layout_constraintTop_toBottomOf="@id/videos_title"
                android:text="0 items"
                android:textSize="14sp"
                android:textColor="@color/light_gray"/>
        <View
            android:id="@+id/bg_audios"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:elevation="2dp"
            android:layout_weight="0.33"
            android:layout_marginTop="5dp"
            android:tag="audio"
            app:layout_constraintStart_toEndOf="@id/bg_videos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_recent"
            android:background="@drawable/category_bg_shape"/>

            <ImageView
                android:id="@+id/audios_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:src="@drawable/ic_outline_audiotrack_24"
                app:layout_constraintTop_toTopOf="@id/bg_audios"
                app:layout_constraintStart_toStartOf="@id/bg_audios"
                app:tint="@color/pink"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/audios_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Audio"
                android:textSize="18sp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/audios_icon"
                app:layout_constraintStart_toStartOf="@id/bg_audios"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/audios_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="@id/audios_title"
                app:layout_constraintTop_toBottomOf="@id/audios_title"
                android:text="0 items"
                android:textSize="14sp"
                android:textColor="@color/light_gray"/>


        <View
            android:id="@+id/bg_apks"
            android:tag="apks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/apks_icon"
            app:layout_constraintBottom_toBottomOf="@id/apks_counter" />
        <ImageView
            android:id="@+id/apks_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_outline_android_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_images"
            android:layout_marginTop="70dp"
            app:tint="@color/light_gray"/>
        <TextView
            android:id="@+id/apks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Install packages"
            android:textSize="20sp"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintTop_toTopOf="@id/apks_icon"
            app:layout_constraintStart_toEndOf="@id/apks_icon"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/apks_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/apks_title"
            app:layout_constraintTop_toBottomOf="@id/apks_title"
            android:text="0 items"
            android:textSize="14sp"
            android:textColor="@color/light_gray"/>

        <View
            android:id="@+id/bg_archives"
            android:tag="archives"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/archives_icon"
            app:layout_constraintBottom_toBottomOf="@id/archives_counter" />
        <ImageView
            android:id="@+id/archives_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_baseline_archive_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_apks"
            android:layout_marginTop="30dp"
            app:tint="@color/light_gray"/>
        <TextView
            android:id="@+id/archives_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archives"
            android:textSize="20sp"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintTop_toTopOf="@id/archives_icon"
            app:layout_constraintStart_toEndOf="@id/archives_icon"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/archives_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/archives_title"
            app:layout_constraintTop_toBottomOf="@id/archives_title"
            android:text="0 items"
            android:textSize="14sp"
            android:textColor="@color/light_gray"/>

        <View
            android:id="@+id/bg_large_files"
            android:tag="large_files"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/large_files_icon"
            app:layout_constraintBottom_toBottomOf="@id/large_files_counter" />
        <ImageView
            android:id="@+id/large_files_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_large_files"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_archives"
            android:layout_marginTop="30dp"
            app:tint="@color/light_gray"/>
        <TextView
            android:id="@+id/large_files_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Files"
            android:textSize="20sp"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintTop_toTopOf="@id/large_files_icon"
            app:layout_constraintStart_toEndOf="@id/large_files_icon"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/large_files_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/large_files_title"
            app:layout_constraintTop_toBottomOf="@id/large_files_title"
            android:text="0 items"
            android:textSize="14sp"
            android:textColor="@color/light_gray"/>


</androidx.constraintlayout.widget.ConstraintLayout>