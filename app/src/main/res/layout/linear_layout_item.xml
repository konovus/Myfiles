<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/bg_apks"
        android:tag="apks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/apks_icon"
        app:layout_constraintBottom_toBottomOf="@id/apks_counter" />
    <ImageView
        android:id="@+id/apks_icon"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_outline_android_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:tint="@color/light_gray"/>
    <TextView
        android:id="@+id/apks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Install packages"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/apks_icon"
        app:layout_constraintStart_toEndOf="@id/apks_icon"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/apks_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/apks_title"
        app:layout_constraintTop_toBottomOf="@id/apks_title"
        android:text="9 items"
        android:textSize="14sp"
        android:textColor="@color/light_gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>